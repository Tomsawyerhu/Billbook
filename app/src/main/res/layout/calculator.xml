<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="650px"
    android:columnCount="8"
    android:orientation="horizontal"
    android:rowCount="6"
    android:background="@color/ivory">



    <TextView
        android:id="@+id/cal_result"
        android:layout_gravity="fill"
        android:layout_columnSpan="6"
        android:text="0"
        android:textSize="20dp"
        android:gravity="center">

    </TextView>

    <Button
        android:id="@+id/cal_clear"
        android:layout_columnSpan="2"
        android:text="C"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>


    <Button
        android:id="@+id/cal_key_one"
        android:layout_columnSpan="2"
        android:text="1"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_two"
        android:layout_columnSpan="2"
        android:text="2"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_three"
        android:layout_columnSpan="2"
        android:text="3"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_four"
        android:layout_columnSpan="2"
        android:text="4"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_five"
        android:layout_columnSpan="2"
        android:text="5"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_six"
        android:layout_columnSpan="2"
        android:text="6"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_seven"
        android:layout_columnSpan="2"
        android:text="7"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_eight"
        android:layout_columnSpan="2"
        android:text="8"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>

    <Button
        android:id="@+id/cal_key_nine"
        android:layout_columnSpan="2"
        android:text="9"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>



    <Button
        android:id="@+id/cal_key_add"
        android:layout_columnSpan="2"
        android:text="+"
        android:textSize="12dp">
    </Button>
    <Button
        android:id="@+id/cal_key_minus"
        android:layout_columnSpan="2"
        android:text="-"
        android:textSize="12dp">
    </Button>

    <Button
        android:id="@+id/cal_key_zero"
        android:layout_columnSpan="2"
        android:text="0"
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>
    <Button
        android:id="@+id/cal_key_mult"
        android:layout_columnSpan="2"
        android:text="*"
        android:textSize="12dp">
    </Button>
    <Button
        android:id="@+id/cal_key_div"
        android:layout_columnSpan="2"
        android:text="/"
        android:textSize="12dp">
    </Button>
    <Button
        android:id="@+id/cal_key_equal"
        android:layout_columnSpan="4"
        android:text="="
        android:textSize="12dp"
        android:layout_gravity="fill">
    </Button>


</GridLayout>
